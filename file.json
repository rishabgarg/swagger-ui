{
    "swagger": "2.0",
    "info": {
        "title": "Zillion Developer API",
        "description": "Move your app forward with the Zillion API",
        "version": "1.0.0"
    },
    "host": "api.zillion.com",
    "schemes": [
        "https"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/v2/authenticateuser": {
            "post": {
                "summary": "Authenticate User",
                "description": "Authenticates the User.",
                "parameters": [
                    {
                        "name": "authorizedSignatureToken",
                        "in": "header",
                        "description": "Generated signature token (you get this when you successfully log in and authenticate your application.)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "applicationName",
                        "in": "header",
                        "description": "Name of the application you're trying to call API of (there are many applications in Platform OS.)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "organizationID",
                        "in": "header",
                        "description": "Your organization's id. You get this when you register to use our Platform OS APIs.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "uniqueRequestID",
                        "in": "header",
                        "description": "A random number generated by your system.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "authorizedUserId",
                        "in": "header",
                        "description": "Id of the user logged in and trying to call this API.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "TimeInUTC",
                        "in": "header",
                        "description": "Current time the request is made, in UTC. Note that this time has to be within +/- 5 minutes of current UTC time.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "User credentials to authenticate.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/AuthenticateUserRequest"
                        }
                    }
                ],
                "tags": [
                    "Authentication"
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "schema": {
                            "$ref": "#/definitions/ApiSuccessResponse"
                        }
                    },
                    "default": {
                        "description": "Unexpected Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            }
        },
