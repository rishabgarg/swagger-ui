                    },
                    {
                        "name": "TimeInUTC",
                        "in": "header",
                        "description": "Current time the request is made, in UTC. Note that this time has to be within +/- 5 minutes of current UTC time.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Authentication"
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "schema": {
                            "$ref": "#/definitions/ApiSuccessResponse"
                        }
                    },
                    "default": {
                        "description": "Unexpected Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
