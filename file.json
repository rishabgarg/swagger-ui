                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "TimeInUTC",
                        "in": "header",
                        "description": "Current time the request is made, in UTC. Note that this time has to be within +/- 5 minutes of current UTC time.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "User details to be authenticated.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/AuthenticateApplicationRequest"
                        }
                    }
                ],
                "tags": [
                    "Authentication"
                ],
                "responses": {
                    "200": {
                        "description": "An array of products",
                        "schema": {
                            "$ref": "#/definitions/ApiSuccessResponse"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            }
        },
        "/auth/v2/userroles": {
            "get": {
                "summary": "Get User Roles",
                "description": "Get a list of User Roles.",
                "parameters": [
                    {
                        "name": "authorizedSignatureToken",
